{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "framework": "fastapi",
    "regions": ["icn1"],
    "functions": {
        "app.py": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1"
    }
}